<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                app:cardElevation="40dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="200dp"
                android:layout_centerHorizontal="true"
                android:padding="30dp"
                android:layout_marginTop="60dp"
                android:id="@+id/card_view_icon"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/notes_24_logo"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_icon"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/about_sentence"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/developer_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sentence"
                android:text="Developers"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_below="@id/developer_heading">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="80dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/attu"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/name_attu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attadeep Jambhulkar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_attu"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/attu_linkedin"
                            android:src="@drawable/icons_linkedin"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/attu_insta"
                            android:src="@drawable/icons_instagram"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/attu_gmail"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:src="@drawable/icons_gmail"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BRANCE: CTECH"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="80dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kittu"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/name_kittu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kirtesh Maskey"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_kittu"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/kittu_linkedin"
                            android:src="@drawable/icons_linkedin"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/kittu_insta"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icons_instagram"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/kittu_gmail"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:src="@drawable/icons_gmail"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BRANCE: CTECH"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"/>
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>